<configuration>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>

    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"${APP_NAME:-config-server}"}</customFields>
        </encoder>
    </appender>

    <!-- (opciono) Mapped Diagnostic Context za trace/span -->
    <appender name="JSON_WITH_MDC" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <threadName/>
                <loggerName/>
                <message/>
                <mdc/>         <!-- ubaci traceId/spanId ako ih staviÅ¡ u MDC -->
                <stackTrace/>
                <context/>
                <jsonFields>
                    <fieldNames>
                        <levelValue>level</levelValue>
                    </fieldNames>
                    <customFields>{"app":"${APP_NAME:-config-server}"}</customFields>
                </jsonFields>
            </providers>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="JSON"/>
    </root>
</configuration>
